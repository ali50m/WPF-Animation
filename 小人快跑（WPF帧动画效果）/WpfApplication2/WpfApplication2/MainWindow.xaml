        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions> 
            <Canvas Grid.Row="0">
                <Image Height="150" Width="100" x:Name="img1"></Image>
            </Canvas>
        <Canvas Grid.Row="1">
            <Button Content="&lt;&lt;" x:Name="btnSlow" Canvas.Left="211" Canvas.Top="6" Click="btnSlow_Click"></Button>
            <Label x:Name="lblSpeed" Canvas.Left="237" Canvas.Top="6"></Label>
            <Button Content=">>" x:Name="btnUp" Canvas.Left="276" Canvas.Top="6" Click="btnUp_Click"></Button>
        </Canvas>
    </Grid>
</Window>
